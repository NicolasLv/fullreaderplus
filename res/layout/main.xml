<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/root_view"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent">
	<org.geometerplus.zlibrary.ui.android.view.ZLAndroidWidget
		android:id="@+id/main_view"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:focusable="true"
		android:scrollbars="vertical"
		android:scrollbarAlwaysDrawVerticalTrack="true"
		android:fadeScrollbars="false"
		android:layout_marginBottom="50dp"/>
	<com.google.android.gms.ads.AdView
	    xmlns:ads="http://schemas.android.com/apk/res-auto"
	    android:id="@+id/adView"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_gravity="bottom|center_horizontal"
	    android:layout_centerHorizontal="true"
	    android:layout_alignParentBottom="true"
	    ads:adUnitId="use-your-own-id"
	    ads:adSize="BANNER"/>
	
	<!-- 
    <ImageView 
    android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:layout_alignParentRight="true"
	android:layout_alignParentTop="true"
	android:src="@drawable/ic_menu_addbookmark"
    />
 -->
    <RelativeLayout 
        android:id="@+id/battery_bar"
        android:layout_width="fill_parent"
    	android:layout_height="fill_parent"
    	android:layout_alignParentBottom="true">
    	<TextView
	       android:id="@+id/battery_tv"
	       android:layout_width="wrap_content"
	       android:layout_height="wrap_content"
	       android:layout_alignParentBottom="true"
	       android:layout_marginLeft="92dp"
	       android:layout_marginBottom="49dp"
	       android:text=""
	       android:textColor="#000000"
	       android:textSize="10sp"/>
	   	   	
	    <TextView
	       android:id="@+id/time_tv"
	       android:layout_width="wrap_content"
	       android:layout_height="wrap_content"
	       android:layout_alignParentBottom="true"
	       android:text=""
	       android:layout_marginLeft="20dp"
	       android:textColor="#000000"
	       android:layout_marginBottom="49dp"
	       android:textSize="10sp"/>
	    	
	     <LinearLayout
	        android:id="@+id/batteryBar"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:background="@drawable/battery"
	        android:layout_alignParentBottom="true"
			android:layout_marginLeft="57dp"
			android:layout_marginBottom="51dp"
	        android:orientation="horizontal" >
		
	        <ImageView
	            android:id="@+id/cellItem1"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginLeft="4.5dp"
	            android:layout_marginRight="1dp"
	            android:layout_marginTop="0.5dp"
	            android:layout_gravity="center_vertical"
	            android:src="@drawable/cell_item_dark" />
				
	        <ImageView
	            android:id="@+id/cellItem2"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginRight="1dp"
	            android:layout_marginTop="0.5dp"
	            android:layout_gravity="center_vertical"
	            android:src="@drawable/cell_item_dark" />
	
	        <ImageView
	            android:id="@+id/cellItem3"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_gravity="center_vertical"
	            android:layout_marginRight="1dp"
	            android:layout_marginTop="0.5dp"
	            android:src="@drawable/cell_item_dark" />
	        <ImageView
	            android:id="@+id/cellItem4"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_gravity="center_vertical"
	            android:layout_marginTop="0.5dp"
	            android:layout_marginRight="1dp"
	            android:src="@drawable/cell_item_dark" />
    	</LinearLayout>
	</RelativeLayout>
 </RelativeLayout>

