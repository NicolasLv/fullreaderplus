<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="Theme.Redtree" parent="@style/Theme.Sherlock">
        <item name="actionBarStyle">@style/ActionBar.Solid.Redtree</item>
        <item name="actionBarTabBarStyle">@style/Theme.Redtree.TabBar</item>

        <!-- <item name="scrollbarBg">@style/Theme.Redtree.scrollBg</item> -->
        <item name="android:buttonStyle">@style/Theme.Redtree.Buttons</item>
        <item name="android:seekBarStyle">@style/Theme.Redtree.SeekBar</item>
        <item name="android:textViewStyle">@style/Theme.Redtree.TextView</item>
        <item name="android:radioButtonStyle">@style/Theme.Redtree.MyRadioButton</item>
        <item name="android:checkboxStyle">@style/Theme.Redtree.MyCheckButton</item>
        <item name="actionBarTabStyle">@style/Theme.Redtree.ActionBarTabStyle</item>
        <item name="android:windowBackground">@drawable/theme_redtree_shelf</item>
         
        
		    <item name="android:dropDownListViewStyle">@style/Theme.Redtree.Widget.DropDownListView</item>
		    <item name="actionBarWidgetTheme">@style/Theme.Redtree.Widget.stylingactionbar.widget</item>
		    
		    		             <item name="android:textColorSecondary">#f2dcd7</item>  
		    
        <item name="android:listViewStyle">@style/Widget.MyTheme.ListView</item>
        <item name="android:scrollViewStyle">@style/Widget.MyTheme.ScrollView</item>
    </style>

    <style name="Widget.MyTheme.ListView" parent="android:Widget.ListView">
        <item name="android:overScrollMode">never</item>
        <item name="android:cacheColorHint">#00000000</item>
    </style>

    <style name="Widget.MyTheme.ScrollView" parent="android:Widget.ScrollView">
        <item name="android:overScrollMode">never</item>
    </style>

    <style name="ActionBar.Solid.Redtree" parent="@style/Widget.Sherlock.ActionBar.Solid">
        <item name="android:background">@drawable/ab_body_theme_redtree</item>
        <item name="background">@drawable/ab_body_theme_redtree</item>
        <item name="titleTextStyle">@style/Theme.Redtree.ActionBar.TitleTextStyle</item>
        <item name="subtitleTextStyle">@style/Theme.Redtree.ActionBar.SubtitleTextStyle</item>
        </style>

    <style name="Theme.Redtree.ActionBar.TitleTextStyle" parent="@style/TextAppearance.Sherlock.Widget.ActionBar.Title">
        <item name="android:textColor">@color/theme_redtree_text</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Theme.Redtree.ActionBar.SubtitleTextStyle" parent="@style/TextAppearance.Sherlock.Widget.ActionBar.Subtitle">
        <item name="android:textColor">@color/theme_redtree_text</item>
    </style>
    
    <style name="Theme.Redtree.Buttons" parent="android:style/Widget.Button">
        <item name="android:background">@drawable/bg_btn_theme_redtree</item>
        <item name="android:textColor">@color/theme_redtree_text</item>
    </style>

    <style name="Theme.Redtree.scrollBg">
        <item name="android:background">@drawable/theme_redtree_scroll_bg</item>
    </style>

    <style name="Theme.Redtree.SeekBar" parent="@android:style/Widget.SeekBar">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/seekbar_progress_theme_redtree</item>
        <item name="android:indeterminateDrawable">@drawable/seekbar_progress_empty_theme_redtree</item>
        <item name="android:thumb">@drawable/seekbar_thumb_theme_redtree</item>
        <item name="android:thumbOffset">-3dp</item>
        </style>

    <style name="Theme.Redtree.TextView" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@color/theme_redtree_text</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Theme.Redtree.TabBar" parent="Widget.Sherlock.ActionBar.TabBar">
        <item name="android:background">@drawable/theme_redtree_bg_for_ok_cancel</item>
        <item name="background">@drawable/theme_redtree_bg_for_ok_cancel</item>
    </style>

    <style name="Theme.Redtree.MyRadioButton" parent="@android:style/Widget.CompoundButton.RadioButton">
        <item name="android:button">@drawable/radio_button_theme_redtree</item>
    </style>

    <style name="Theme.Redtree.MyCheckButton" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/checkbox_button_theme_redtree</item>
    </style>
    
   <style name="Theme.Redtree.ActionBarTabStyle" parent="@style/Widget.Sherlock.ActionBar.TabView">
        <item name="android:background">@android:color/transparent</item>
    </style>
      
    <style name="Theme.Redtree.Widget.EditText" parent="@android:style/Widget.EditText">
        <item name="android:background">@drawable/custom_edittext_theme_redtree</item>
    </style>     
    
	<style name="Theme.Redtree.Widget.DropDownListView" parent="@android:style/Widget.ListView.DropDown">
	    <item name="android:listSelector">@drawable/ab_selectable_bg_theme_redtree</item>
	</style>
	
    <style name="Theme.Redtree.Widget.stylingactionbar.widget" parent="@android:style/Theme">
    <item name="android:dropDownListViewStyle">@style/Theme.Redtree.Widget.DropDownListView</item>
        <item name="android:textColor">@color/theme_redtree_text</item>
    </style>
</resources>